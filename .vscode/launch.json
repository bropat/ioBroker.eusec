    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TypeScript Adapter",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/src/main.ts",
            "args": ["--debug", "0"],
            "preLaunchTask": "tsc: build - tsconfig.build.json",
            "outFiles": ["${workspaceFolder}/build/**/*.js"]
        }
    ]
}